<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#FDE792"
             android:id="@+id/main"
             tools:context=".MainActivity">
    <ScrollView
            android:id="@+id/scroll_main"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="8"
                android:padding="16dp">
            <!-- android:background="#D1570D" -->
            <Button
                    android:text="Obter Temperatura"
                    android:onClick="onClickShowTemperature"
                    android:padding="16dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="16dp"
                    android:id="@+id/btn_temperature"
                    android:layout_marginTop="8dp"
                    tools:ignore="MissingConstraints"
                    android:textAllCaps="false"
                    android:textSize="36sp"
                    android:background="@drawable/radius_button"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FDE792"/>
            <TextView
                    android:id="@+id/txt_temperature"
                    android:text="0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:text="@string/zero"
                    android:gravity="center"
                    android:textSize="80sp"
                    tools:ignore="MissingConstraints"/>
            <LinearLayout
                    android:id="@+id/layout_on_off"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <Button
                        android:id="@+id/btn_on"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:onClick="onClickBtnOn"
                        android:text="@string/power_on"
                        android:textSize="36sp"
                        android:background="@drawable/radius_left_button"
                        android:textColor="#477725"/>
                <Button
                        android:id="@+id/btn_off"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="onClickBtnOff"
                        android:padding="16dp"
                        android:text="@string/power_off" android:textSize="36sp"
                        android:background="@drawable/radius_right_button"
                        android:textColor="#484A47"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/layout_ip_port"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="0dp"
                    android:weightSum="3">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="192.168.0.103"
                        android:id="@+id/txt_ip"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="80"
                        android:id="@+id/txt_port"/>
            </LinearLayout>

            <Button
                    android:text="Atualizar Endereço"
                    android:layout_width="fill_parent"
                    android:padding="16dp"
                    android:layout_height="wrap_content"
                    android:onClick="onClickRefreshAddress"
                    tools:layout_editor_absoluteX="94dp"
                    android:id="@+id/btn_refresh_address"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/radius_button"
                    android:textColor="#FDE792"
                    tools:ignore="MissingConstraints"/>
            <TextView
                    android:id="@+id/txt_response"
                    android:text="Informações"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="16dp"
                    android:layout_marginTop="8dp"
                    tools:text="Informações"
                    android:gravity="center"
                    tools:ignore="DuplicateIds,MissingConstraints"/>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main"
            android:layout_above="@id/scroll_main"
            android:gravity="bottom">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="© Fergus Sistemas"
                android:textColor="#D1570D"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:textSize="20sp"/>
    </RelativeLayout>
</FrameLayout>